{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "module": "CommonJS",
    "paths": {
      "@src/*": [
        "./src/*"
      ],
      "@assets/*": [
        "./assets/*"
      ]
    }
  }
}